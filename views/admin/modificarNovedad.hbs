<div class="container table">
    <h3 class="text-center my-3">Modificar novedad</h3>

    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/novedades/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>
        <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{novedad.id}}">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <label for="">Subtitulo</label>
                    <textarea type="text" class="form-control" name="subtitulo"
                        rows="3">{{novedad.subtitulo}}</textarea>
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <label for="">Cuerpo</label>
                    <textarea type="text" class="form-control" name="cuerpo" rows="10"
                        style="height:100%;">{{novedad.cuerpo}}</textarea>
                </div>
            </div>            
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <p>
                        <label for="">Imagen <input type="file" name="imagen" id="imagen"></label>
                    </p>                    
                        <label for=""><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                        actual? </label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">                    
                </div>
            </div>
            <button type="submit" class="btn btn-primary my-3"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
        </form>
        {{#if error}}
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>
</div>