<div class="container table">
    <div class="row my-3">
            <h3 class="text-center my-2">Reporte de Ventas</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/ventas/">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/ventas/reporteVentas">Reporte de ventas</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>      
            </ol>
        </nav>    
    </div>
    <div class="my-3 text-center">
        <form action="/admin/ventas/buscar" method="post">
        <div class="mb-3 row">
            <div class="d-flex col-sm-8 text-center">
                <input type="text" class="form-control mx-1" placeholder="Buscar cliente (numero de cuenta)..." name="buscar"> 
                 <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i> </button>
            </div>
        </div>        
        </form>        
    </div>
     <table class="table striped bordered table-hover shadow rounded">
        <thead class="bg-dark text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Fecha</th>
                <th scope="col">#Cuenta</th>
                <th scope="col">Nombre</th>                
                <th scope="col">Direccion</th>
                <th scope="col">Estado</th>
                <th scope="col">(Estado/Borrar)</th>
            </tr>
        </thead>
        <tbody> 
            {{#each ventas}}            
            <tr>
                <td>{{id_venta}}</td>
                <th scope="row">{{producto_nombre}}</th>
                <td>{{venta_fecha}}</td>
                 <td>{{id_cliente}}</td>
                <td>{{cliente_apellido}}, {{cliente_nombre}}</td>                
                <td>{{cliente_direccion}}</td>
                <td>{{#if estado}} <span class="badge bg-success">Finalizado</span>
                {{else}} <span class="badge bg-warning">En Proceso</span>
                {{/if}}
                </td>
                <td>
                    <p class="text-end"><a class="btn btn-primary mx-2" href="/admin/ventas/modificar/{{this.id_venta}}">
                           <i class="fa-solid fa-wrench"></i></a><a class="btn btn-danger"
                            href="/admin/ventas/eliminar/{{this.id_venta}}">
                            <i class="fa-solid fa-ban"></i></a></p>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
 