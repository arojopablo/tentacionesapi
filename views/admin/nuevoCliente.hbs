<div class="container table">
    <h3 class="text-center">Agregar nuevo Cliente</h3>

    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/clientes/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>
        <form action="/admin/clientes/agregar" method="post">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="nombre" name="nombre">
                </div>
           </div>       
           <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="apellido" name="apellido">
                </div>
           </div>           
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Correo Electronico" name="mail">
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Telefono" name="telefono">
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Domicilio" name="direccion">
                </div>
            </div>
            <button type="submit" class="btn btn-primary"> <i class="fa-solid fa-floppy-disk"></i> Guardar</button>
            {{!-- {{#if root}} 
             <p>soy root</p>
            {{/if}} --}}
        </form>
       {{#if error}}        
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>
</div>