<div class="container table">
    <h3 class="text-center">Agregar nuevo usuario</h3>

    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/usuarios/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>
        <form action="/admin/usuarios/agregar" method="post">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Usuario" name="usuario">
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <select class="custom-select" id="inputGroupSelect04" name="rol" aria-label="Example select with button addon">
                        <option selected>Seleccione Rol...</option>
                        <option value="root" name="root">Root</option>
                        <option value="lectura" name="lectura">Lectura</option>
                    </select>
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Password" name="password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
        </form>
       {{#if error}}        
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>
</div>