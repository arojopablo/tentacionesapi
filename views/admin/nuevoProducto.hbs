<div class="container table">
    <h2>Agregar producto</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/productos/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>
    {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Correcto!</strong> {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {{/if}}
    <form class="row g-3 needs-validation" method="post" action="/admin/nuevoProducto" novalidate
        enctype="multipart/form-data">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="inputUser" placeholder="Nombre Producto" name="nombre">
                <label for="floatingInput">Producto (nombre)</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Descripcion producto"
                    name="descripcion">
                <label for="floatingInput"> Descripcion </label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Marca producto" name="marca">
                <label for="floatingInput"> Marca </label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Precio producto" name="precio">
                <label for="floatingInput"> Precio </label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <textarea class="form-control" id="floatingInput" placeholder="Observaciones" name="observaciones"
                    style="height: 200px"></textarea>
                <label for="floatingInput"> Observaciones </label>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-sm-10">
                <label>Imagen <input class="my-2" type="file" name="imagen" id="imagen"></label>
            </div>
        </div>
        <div class="col-12 d-grid">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Agregar Producto
            </button>
        </div>
    </form>
      {{#if error}}        
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}   
</div>