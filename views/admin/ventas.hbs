<div class="container my-2 table">
    <h3 class="text-center">Registrar nueva venta</h3>

    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/ventas/">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/ventas/reporteVentas">Reporte de ventas</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>
        <div class="my-3 text-center">
            <form action="/admin/ventas/buscarProducto" method="post">
                <div class="mb-3 row">
                    <div class="d-flex col-sm-10">
                        <input type="text" class="form-control mx-1" placeholder="Buscar producto..." name="buscar">
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <form action="/admin/ventas/agregar" method="post">
            <div class=" mb-3 row">
                <p> Seleccione Cliente...</p>
                <div class="col-sm-10">
                    <select class="custom-select" id="inputGroupSelect04" name="id_cliente"
                        aria-label="Example select with button addon">
                        {{#each clientes}}
                        <option value={{id_cliente}} name={{id_cliente}}>{{apellido}} {{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="col-sm-10">
                    <option selected>Seleccione producto...</option>
                    <select class="custom-select" id="inputGroupSelect04" name="id_producto" {{!--
                        aria-label="Example select with button addon" size="{{productos.length}}"> --}}
                        aria-label="Example select with button addon" size="10">

                        {{#each productos}}
                        <option value={{id_producto}} name={{id_producto}}>{{nombre}} - importe = $ {{precio}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    {{!-- <input type="text" class="form-control" placeholder="Inrgese cantidad en numeros"
                        name="cantidad" onclick="var e=this;setTimeout(function(){e.disabled=true;},0);return true;">
                    --}}
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Producto </button>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Ingrese cantidad en numeros" name="cantidad">
                </div>
            </div>
            <hr>
            <h6>Productos:</h6>
            <div>
                <ul>
                    <li></li>
                </ul>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
        </form>
        {{#if error}}
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        {{#if exito}}
        <div class="col-sm-8 alert alert-success alert-dismissible fade show my-3" role="alert">
            <strong>Producto cargado con exitgo!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>
</div>