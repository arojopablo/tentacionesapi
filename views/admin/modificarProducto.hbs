<div class="container table">
    <h2>Modificar producto</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/productos/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>

    {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Correcto!</strong> {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form class="row g-3 needs-validation" method="post" action="/admin/productos/modificar" novalidate 
    enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{producto.id_producto}}">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="inputUser" name="nombre" value="{{producto.nombre}}">
                <label for="floatingInput">Producto (nombre)</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="descripcion"
                    value="{{producto.descripcion}}">
                <label for="floatingInput"> Descripcion </label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="marca" value="{{producto.marca}}">
                <label for="floatingInput"> Marca </label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="precio" value="{{producto.precio}}">
                <label for="floatingInput"> Precio </label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <textarea class="form-control" id="floatingInput" name="observaciones"
                    style="height: 200px">{{producto.observaciones}}</textarea>
                <label for="floatingInput"> Observaciones </label>
            </div>
        </div>
         <div class=" mb-3 row">
                <div class="col-sm-10">
                    <p>
                        <label for="">Imagen <input type="file" name="imagen" id="imagen"></label>
                    </p>                    
                        <label for=""><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                        actual? </label>
                    <input type="hidden" name="img_original" value="{{producto.imagen}}">                    
                </div>
            </div>
        <div class="col-12 d-grid">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Modificar Producto
            </button>
        </div>
    </form>
     {{#if error}}        
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}   
</div>