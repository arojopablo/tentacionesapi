<div class="container table">
                <h3 class="text-center">Agregar nuevo servicio</h3>

    <div class="row">
        <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/servicios/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Library</li>
    </ol>
</nav>
        <form action="/admin/servicios/agregar" method="post" enctype="multipart/form-data">
        <div class="mb-3 row">
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo">  
            </div>
        </div>
         <div class=" mb-3 row">
            <div class="col-sm-10">
               <textarea type ="text" class="form-control" placeholder="Subtitulo" name="servicio"></textarea>
            </div>
        </div>   
        <div class="mb-3 row">
                <div class="col-sm-10">
                    <label>Imagen <input class = "my-2" type="file" name="imagen" id="imagen"></label>    
                </div>
            </div>    
         <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
        </form>        
         {{#if error}}        
        <div class="col-sm-8 alert alert-danger alert-dismissible fade show my-3" role="alert">
            <strong>Error!</strong> {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>
</div>
